{
  "name": "at-ict",
  "version": "1.0.0",
  "description": "AT-ICT Learning Management System",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd client && npm start",
    "install-server": "cd backend && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd client && npm run build",
    "start:prod": "cd backend && NODE_ENV=production npm start",
    "deploy": "npm run install-all && npm run build",
    "docker:build": "docker build -t atict-lms .",
    "docker:run": "docker run -p 3000:80 -p 5000:5000 atict-lms",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "react-toastify": "^11.0.5",
    "react-youtube": "^10.1.0",
    "concurrently": "^7.6.0"
  }
}
