{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "numReplicas": 1
  },
  "service": {
    "internal_port": 5000,
    "auto_deploy_on": ["main"]
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "MAX_FILE_SIZE": "100mb",
        "UPLOAD_TIMEOUT": "300000"
      }
    }
  }
}
