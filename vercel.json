{
  "version": 2,
  "name": "atict-frontend",
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "cd client && npm ci",
  "framework": "create-react-app",
  "env": {
    "GENERATE_SOURCEMAP": "false",
    "CI": "false",
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://at-ict-test-production-6f8b.up.railway.app"
  },
  "rewrites": [
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
} 